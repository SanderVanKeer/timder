extends layout

block content
  a(href="/") Back to home

  h1 Sign up

  form(action="/login", method="post")
    label(for="firstName") First name
    input.form-control(type="text", name="firstName", id="firstName", autofocus)
    label(for="lastName") Last name
    input.form-control(type="text", name="lastName", id="lastName", autofocus)
    label(for="email") Email
    input.form-control(type="text", name="email", id="email", autofocus)
    label(for="password") Password
    input.form-control(type="password", name="password", id="password", autofocus)
    button.btn.btn-primary(type="submit") Sign up

    p Already have an account?
    a.btn.btn-default(href="/login") Log in here

