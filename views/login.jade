extends layout

block content
  a(href="/") Back to home

  h1 Log in

  form(action="/login", method="post")
    label(for="email") Email
    input.form-control(type="text", name="email", id="email", autofocus)
    label(for="password") Password
    input.form-control(type="password", name="password", id="password", autofocus)
    button.btn.btn-primary(type="submit") Log in

    p Need an account?
    a.btn.btn-default(href="/signup") Sign up here

